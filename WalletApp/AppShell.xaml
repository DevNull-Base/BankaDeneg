<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WalletApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WalletApp"
    xmlns:views="clr-namespace:WalletApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="WalletApp">
    
    <ShellContent Route="SplashPage" ContentTemplate="{DataTemplate views:SplashPage}" />
    <ShellContent Route="SetPinPage" ContentTemplate="{DataTemplate views:SetPinPage}" />
    <ShellContent Route="PinEntryPage" ContentTemplate="{DataTemplate views:PinEntryPage}" />
    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />

</Shell>
